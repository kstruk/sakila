<configuration>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} [%-5level] [%logger{3.4.~}] %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="kstruk.sakila" level="info"/>
    <logger name="ch.qos.logback" level="error"/>
    <logger name="org.jooq.Constants" level="warning"/>

    <root level="error">
        <appender-ref ref="console"/>
    </root>

</configuration>
